// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Person {
  id               Int                @id @default(autoincrement())
  firstName        String
  lastName         String
  dateOfBirth      String
  email            String             @unique
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  
  phones           Phone[]
  addresses        Address[]
  contactActivities ContactActivity[]

  @@map("Person")
}

model PhoneType {
  id               Int      @id @default(autoincrement())
  typeName         String   @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  phones           Phone[]

  @@map("PhoneType")
}

model Phone {
  id               Int        @id @default(autoincrement())
  number           String
  personId         Int
  phoneTypeId      Int
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  
  person           Person     @relation(fields: [personId], references: [id], onDelete: Cascade)
  phoneType        PhoneType  @relation(fields: [phoneTypeId], references: [id])

  @@map("Phone")
}

model Address {
  id               Int      @id @default(autoincrement())
  personId         Int
  locality         String
  street           String
  number           String
  notes            String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  person           Person   @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@map("Address")
}

model ContactActivity {
  id               Int      @id @default(autoincrement())
  personId         Int
  activityType     String   // 'call', 'meeting', 'email'
  activityDate     String
  description      String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  person           Person   @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@map("ContactActivity")
}
